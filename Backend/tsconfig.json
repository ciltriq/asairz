{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "outDir": "./dist",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src","prisma.config.ts"]
}
